<tr>
  <td><%= link_to project.title, event_project_path(event, project) %></td>
  <td class="slug"><%= truncate( project.slug, :length => 20 ) %></td>
  <td><%= truncate( project.team, :length => 30 ) %></td>
  <td>
    <ul class="awards">
      <% project.award_categories.each do |award| %>
        <li><%= award.title %></li>
      <% end %>
    </ul>
  </td>
  <td><%= link_to "Edit", edit_admin_event_project_path(event, project) %></td>
  <td><%= link_to "Delete", admin_event_project_path(event, project), :method => "DELETE", data: { confirm: "You are deleting #{project.title} (#{project.slug}). This can't be reversed. Are you sure you want to continue?" } %></td>
</tr>
