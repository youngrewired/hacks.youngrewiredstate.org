<%= semantic_form_for [event, project] do |f| %>

  <%= f.inputs "About you" do %>
    <% if event.use_centres? %>
      <%= f.input :centre, collection: event.centres %>
    <% end %>
    <%= f.input :team %>
    <%= f.input :twitter %>
  <% end %>

  <%= f.inputs "About your project" do %>
    <%= f.input :title %>
    <%= f.input :description %>

    <%= f.input :url %>
    <%= f.input :code_url %>

    <%= f.input :tag_list_with_hashes, input_html: { data: { module: 'suggested-tags' }} %>
    <%= render partial: 'suggested_tags' %>
  <% end %>

  <%= f.inputs "Upload an image" do %>
    <%= f.input :image %>
  <% end %>

  <%= f.inputs "And finally..." do %>
    <% if f.object.new_record? %>
      <%= f.input :secret %>
    <% else %>
      <%= f.input :submitted_secret %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button, button_html: { data: { disable_with: 'Please wait...'} } %>
  <% end %>

<% end %>

